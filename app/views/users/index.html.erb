<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Prename</th>
    <th>Street</th>
    <th>City</th>
    <th>Zip</th>
    <th>Avatar</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.prename %></td>
    <td><%= user.street %></td>
    <td><%= user.city %></td>
    <td><%= user.zip %></td>
    <td><%= image_tag 'avatars/'+user.avatar.url %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

